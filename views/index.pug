extends layout


block content

  section.jumbotron.text-center
    .container
      h4
        | Images for Today 
        span.badge.badge-secondary (#{images_list.length})
      p
      p   
        button#reload-images.btn.btn-primary(type='button') Reload Images
        p 
  .album.py-5.bg-light
    .container
      .row
        each images in images_list
          .col-md-4
            .cpard.mb-4.box-shadow
              span.badge.badge-secondary Image Id: (#{images.id})
              if images.current_image==1
                span.badge.badge-pill.badge-success -> Next Image
              img.card-img-top(style='height: 100%; width: 100%; display: block;' src='./images/' + images.filename data-holder-rendered='true')
              .card-body
                p.card-text
                 // | (#{images.downloaded_at})
                .d-flex.justify-content-between.align-items-center
                  .btn-group
                  button(id="img" + images.id).delete-image.btn.btn-danger(type='button') Remove
        else
         p There are no images. Try reloading images.
  footer.text-muted
    .container
      p.float-right
        a(href='#') Back to top
      p Smart frame using eInk to render motivational images from reddit.
      p This is an experimental project â€” expect tons of bugs :-)